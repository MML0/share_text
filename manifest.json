{
  "manifest_version": 3,
  "name": "Send Selected Text",
  "version": "1.0",
  "description": "Right-click text and send it to server",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "host_permissions": ["http://mml-dev.ir/*"],
  "background": {
    "service_worker": "background.js"
  },
    "icons": {
    "16": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/send.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
